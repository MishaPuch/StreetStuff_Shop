@{
    var session = HttpContextAccessor.HttpContext.Session;
    var currentUser = session.GetString("CurrentUser");

    User? user = null;
    if (!string.IsNullOrEmpty(currentUser))
    {
        user = JsonConvert.DeserializeObject<User>(currentUser);
    }
}
<!DOCTYPE html>

<html>
<head>


        <style>
            @@import url('https://fonts.cdnfonts.com/css/draconian-typewriter');
            @@import url('https://fonts.cdnfonts.com/css/bomber-wall');
        </style>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/StreetStuff_Shop.styles.css" asp-append-version="true" />


   
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
    <body>
        <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
            <div class="col-md-3 mb-2 mb-md-0">
                    <a class="graffity" aria-current="page" asp-area="" asp-controller="Home" asp-action="Index">Street Stuff</a>
            </div>

            <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
                <li><a class="nav-link px-2 link-secondary graffity" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a class="nav-link px-2 graffity"asp-area="" asp-controller="Account" asp-action="Profile">Account</a></li>
                <li><a class="nav-link px-2 graffity" asp-area="" asp-controller="Home" asp-action="About">About</a></li>
            </ul>
        <div class="col-md-3 text-end">
            @if (user != null)
            {
                <a type="button" class="me-2 " asp-area="" asp-controller="Home" asp-action="Basket"><img src="~/photos/logo/basket.png" width="30px" /></a>
                <a type="button" class="me-2 " asp-area="" asp-controller="Account" asp-action="Profile"><img src="~/photos/logo/@user.Photo" alt="Photo" width="30px" /></a>
                <a type="button" class="btn btn-outline-primary me-2 font-norm" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
            }
            else
            {
                <a type="button" class="me-2 " asp-area="" asp-controller="Home" asp-action="Basket"><img src="~/photos/logo/basket.png" width="30px" /></a>
                <a type="button" class="btn btn-outline-primary me-2 font-norm" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                <a type="button" class="btn btn-primary font-norm" asp-area="" asp-controller="Account" asp-action="CreateAccount">Sign-up</a>
            }
            </div>
        </header>
    </body>
</html>
